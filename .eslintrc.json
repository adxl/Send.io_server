{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": "error",
        "no-unused-vars": "warn",
        "indent": [
            "warn",
            "tab"
        ],
        "no-mixed-spaces-and-tabs": "warn",
        "no-tabs": "off",
        "no-await-in-loop": "off"
    }
}